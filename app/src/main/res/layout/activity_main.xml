<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="false"
    android:paddingBottom ="16dp"
    android:paddingLeft ="16dp"
    android:paddingRight = "16dp"
    android:paddingTop ="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/bg1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stats"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:onClick="statsButton"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#2c435e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fighting Game!"
        android:id="@+id/textView"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:textColor="#fa0f0f"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fight!"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="fightButton"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="#2c435e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monster"
        android:id="@+id/button3"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:onClick="monsterButton"
        android:textStyle="bold"
        android:textColor="#2c435e"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setup"
        android:id="@+id/setupBt"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="setupButton"
        android:textColor="#2c435e"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>
